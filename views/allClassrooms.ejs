<html>
    <head>
        <title>Apni Kaksha</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    </head>
    <body>
        <div class="ui fixed inverted blue menu">
            <div class="ui container">
                <div class="header item"><i class="edit icon"></i><a href="">Apni Kaksha</a></div>
                <div class="header item"><a href="/classrooms">All Classrooms</a></div>
            </div>
            <div class="right menu">
                <div class="header item"><a href="/logout">Logout</a></div>
            </div>
        </div>
        <br><br><br>


            <!-- ================CLASSROOM=================== -->
            <div class="profile-container">
                <div class="row row-space-20">
                    <div class="col-md-8">
                        <div class="tab-content p-0">
                            <div class="tab-pane active show" id="grade-sheet">
                                <div class="m-b-10"><b>Classroom</b></div>
                                <div class="row text-center" style="display: flex; flex-wrap: wrap;">
                                    <%cl.forEach(function(cl){%>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="thumbnail">
                                            <img src="/images/book.jpg">
                                            <div class="caption">
                                                <a href="/classrooms/<%=cl.subjectCode%>"><h5><%= cl.subjectCode+" "+cl.subjectName%></h5></a>
                                                <p><%= cl.createdBy.username %></p>
                                            </div>
                                        </div>
                                    </div>
                                    <%})%>
                                </div>
                            </div>                    
                        </div>
                    </div>
    
                </div>
            </div>
    </body>
    </html>